<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal__mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kchw1.myapplication.Personal_Mode">

    <Button
        android:text="Ready\n00:00"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:id="@+id/ready" />

    <Button
        android:text="Exercise\n00:00"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_below="@+id/ready"
        android:layout_alignRight="@+id/ready"
        android:layout_alignEnd="@+id/ready"
        android:layout_marginTop="59dp"
        android:id="@+id/exercise" />

    <Button
        android:text="Rest\n00:00"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_below="@+id/exercise"
        android:layout_alignLeft="@+id/exercise"
        android:layout_alignStart="@+id/exercise"
        android:layout_marginTop="65dp"
        android:id="@+id/rest" />

    <Button
        android:text="Set\n0"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:id="@+id/set"
        android:layout_below="@+id/rest"
        android:layout_alignLeft="@+id/rest"
        android:layout_alignStart="@+id/rest" />

    <Button
        android:text="Play\nPause"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:id="@+id/play_pause"
        android:layout_alignBaseline="@+id/set"
        android:layout_alignBottom="@+id/set"
        android:layout_alignRight="@+id/rest"
        android:layout_alignEnd="@+id/rest" />


</RelativeLayout>
